{
  "name": "spotify-now-playing-api",
  "version": "1.0.1",
  "description": "Spotify Now Playing API integration for Framer",
  "main": "index.js",
  "scripts": {
    "dev": "vercel dev",
    "type-check": "tsc --noEmit",
    "deploy": "npm run validate:env && vercel --prod",
    "predeploy": "npm run validate:env",
    "validate:env": "node scripts/validate-env.js",
    "spotify-auth": "node scripts/spotify-auth.js",
    "auth": "node scripts/spotify-auth.js --server",
    "auth:simple": "node scripts/spotify-auth.js --simple",
    "auth:manual": "node scripts/spotify-auth.js --manual",
    "auth:exchange": "node scripts/spotify-auth.js --exchange",
    "test": "node tests/api.test.js",
    "test:auth": "node tests/auth.test.js",
    "test:api": "node tests/api.test.js",
    "test:improved-api": "node tests/improved-api.test.js",
    "test:env": "npm run validate:env",
    "debug:vercel": "node debug/vercel-debug.js"
  },
  "keywords": [
    "spotify",
    "now-playing",
    "api",
    "framer",
    "react"
  ],
  "dependencies": {
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "framer": "^2.4.1",
    "framer-motion": "^10.18.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.3.7",
    "@vercel/node": "^3.0.0",
    "node-fetch": "^2.6.12",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
